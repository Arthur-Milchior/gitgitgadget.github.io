{
    "extends": "tslint:recommended",
    "rules": {
        "align": [
            true,
            "parameters",
            "arguments",
            "members",
            "elements",
            "statements"
        ],
        "max-line-length": {
            "options": [
                80
            ]
        },
        "no-unused-expression": true,
        "no-console": false,
        "array-type": [true, "array-simple"]
    }
}